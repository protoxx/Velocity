{
  "name": "velocity-monorepo",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev:studio": "pnpm --filter @velocity/studio dev",
    "dev:web": "pnpm --filter @velocity/web dev",
    "build:studio": "pnpm --filter @velocity/studio build",
    "build:web": "pnpm --filter @velocity/web build",
    "build:schema": "pnpm --filter @velocity/schema build",
    "lint": "turbo lint",
    "seed:dataset": "node scripts/provision/seed-dataset.mjs",
    "migrate": "node scripts/migrations/migrate.mjs",
    "qa:web": "pnpm --filter @velocity/web test",
    "qa:lighthouse": "node scripts/qa/run-lhci.mjs"
  },
  "dependencies": {
    "@sanity/client": "^6.15.6",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@lhci/cli": "^0.12.0",
    "cross-env": "^7.0.3",
    "turbo": "^1.11.2",
    "typescript": "^5.4.5"
  }
}
